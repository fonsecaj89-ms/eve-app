# ========================================
# EVE Online Trading Platform - Environment Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control


# ========================================
# Database Configuration
# ========================================

# PostgreSQL (Static Data Export)
POSTGRES_USER=eve_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=eve_sde

# Neo4j (Graph Database)
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password_here

# Redis
# No password required for default setup


# ========================================
# EVE Online SSO OAuth Configuration
# ========================================
# Register your application at: https://developers.eveonline.com/

EVE_CLIENT_ID=your_eve_client_id_here
EVE_CLIENT_SECRET=your_eve_client_secret_here

# Callback URL - MUST match what's registered in EVE Developer Portal
EVE_CALLBACK_URL=https://eve-app.jf-nas.com/callback

# Required EVE SSO Scopes (space-separated)
EVE_SCOPES=esi-wallet.read_character_wallet.v1 esi-skills.read_skills.v1 esi-markets.read_character_orders.v1 esi-characters.read_blueprints.v1 esi-industry.read_character_jobs.v1 esi-contracts.read_character_contracts.v1 esi-assets.read_assets.v1 esi-universe.read_structures.v1 esi-search.search_structures.v1


# ========================================
# Application Settings
# ========================================

# Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your_random_secret_key_here_min_32_characters

# Environment (development, staging, production)
ENVIRONMENT=development


# ========================================
# Cloudflare Tunnel - REQUIRED
# ========================================
# Get your tunnel token from: https://dash.cloudflare.com/
# The tunnel MUST expose: https://eve-app.jf-nas.com

CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here


# ========================================
# Frontend Configuration
# ========================================

# Backend API URL (from frontend's perspective)
VITE_API_URL=http://localhost:8000

# HMR Host for Vite (MUST match Cloudflare tunnel domain)
VITE_HMR_HOST=eve-app.jf-nas.com


# ========================================
# Market & Tax Configuration
# ========================================

# Base sales tax (8% = 0.08)
BASE_SALES_TAX=0.08

# Base broker fee (3% = 0.03)
BASE_BROKER_FEE=0.03

# Default character skills (if not fetched from ESI)
DEFAULT_ACCOUNTING_LEVEL=0
DEFAULT_BROKER_RELATIONS_LEVEL=0


# ========================================
# Fuzzwork SDE Configuration
# ========================================
# Place your Fuzzwork PostgreSQL dump in: backend/data/
# Expected filename format: postgres-*.dump or *.sql

SDE_DUMP_FILE=postgres-latest.dump
